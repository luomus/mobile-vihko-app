{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "module": "NodeNext",
    "target": "esnext",
    "lib": [
      "es6"
    ],
    "moduleResolution": "nodenext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "**/*.ts", "**/*.tsx", "__tests__"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    ".env"
  ],
  "extends": "expo/tsconfig.base",
  "typeRoots": ["./src/types"]
}